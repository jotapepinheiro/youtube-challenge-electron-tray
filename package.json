{
  "name": "codetray",
  "description": "Open VSCode projects from tray menu.",
  "version": "1.0.0",
  "main": "main.js",
  "homepage": "https://github.com/jotapepinheiro/youtube-challenge-electron-tray",
  "repository": "https://github.com/jotapepinheiro/youtube-challenge-electron-tray",
  "bugs": "https://github.com/Rocketseat/youtube-challenge-electron-tray/issues",
  "author": "Rocketseat <oi@rocketseat.com.br>",
  "contributors": [
    "Joao Paulo Pinheiro <joaopinheiro.ti@gmail.com> (https://twitter.com/JotapePinheiro)"
  ],
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:all": "npm-run-all -p dist:*",
    "dist:mac": "electron-builder --mac",
    "dist:windows": "electron-builder --windows",
    "dist:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "axios": "^0.19.2",
    "electron-store": "^4.0.0",
    "fix-path": "^2.1.0",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "electron": "^5.0.7",
    "electron-builder": "^21.0.15",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0",
    "nodemon": "^1.19.1"
  },
  "engines": {
    "node": ">= 12.16.3",
    "npm": ">= 6.14.4"
  },
  "build": {
    "appId": "dev.joaopinheiro.codetray",
    "productName": "CodeTray",
    "mac": {
      "category": "public.app-category.developer-tools",
      "darkModeSupport": true,
      "target": ["dmg"],
			"electronLanguages": ["en", "es", "pt_BR"]
    },
    "linux": {
      "category": "Utility",
      "icon": "icon.png",
      "target": [
        "deb",
        "snap",
        "rpm"
      ]
    }
  }
}
